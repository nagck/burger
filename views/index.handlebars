<div class="row">
    <div id="start" class="col-md">
        <h2>Burgers ready to be devoured!</h2>
        <ul class="text-center">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class="col-md">
        <img class="text-center" id="burgerImage" src="/assets/img/burger.png" alt="burger picture">
        <form id="create-form">
            <div class="form-group">
               <p> <label for="ca">Enter a burger you want to eat and click the Add Burger button!</label></p>
                <input type="text" id="ca" name="name"  size="50">
            </div>
            <div><button type="submit" class="btn btn-primary">Add Burger</button></div>
        </form>
    </div>

    <div id="finish" class="col-md">
        <h2>Burgers that are devoured!</h2>
        <ul class="text-center">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
        </ul>
    </div>
</div>